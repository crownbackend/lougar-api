{% if pageCount > 1 %}
    <div class="review-pagination">
        {% if first is defined and current != first %}
            <span class="first">
                <a class="btn btn-back" href="{{ path(route, query|merge({(pageParameterName): first})) }}">DÃ©but</a>
            </span>
        {% endif %}
        <ul class="pagination">
            {% for page in pagesInRange %}
                {% if page != current %}
                    <li class="page-item">
                        <a class="page-link" href="{{ path(route, query|merge({(pageParameterName): page})) }}">{{ page }}</a>
                    </li>
                {% else %}
                    <li class="page-item active">
                        <a class="page-link" href="#">{{ page}} <span class="visually-hidden">(current)</span></a>
                    </li>
                {% endif %}
            {% endfor %}
        </ul>
        {% if last is defined and current != last %}
            <span class="last">
                <a class="btn btn-back" href="{{ path(route, query|merge({(pageParameterName): last})) }}">Fin</a>
            </span>
        {% endif %}
    </div>

{% endif %}

