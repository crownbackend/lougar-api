<!-- Availability Days -->
{% set Monday = true %}
{% set Tuesday = true %}
{% set Wednesday = true %}
{% set Thursday = true %}
{% set Friday = true %}
{% set Saturday = true %}
{% set Sunday = true %}

{% if garage.availability|length == 1 %}

    {% for time in garage.availability[0].availabilityTimes %}

        {% if time.dayOfWeek == 0 %}
            {% set Monday = false %}
        {% endif %}

        {% if time.dayOfWeek == 1 %}
            {% set Tuesday = false %}
        {% endif %}

        {% if time.dayOfWeek == 2 %}
            {% set Wednesday = false %}
        {% endif %}

        {% if time.dayOfWeek == 3 %}
            {% set Thursday = false %}
        {% endif %}

        {% if time.dayOfWeek == 4 %}
            {% set Friday = false %}
        {% endif %}

        {% if time.dayOfWeek == 5 %}
            {% set Saturday = false %}
        {% endif %}

        {% if time.dayOfWeek == 6 %}
            {% set Sunday = false %}
        {% endif %}

    {% endfor %}
{% endif %}

