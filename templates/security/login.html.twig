{% extends 'base.html.twig' %}

{% block title %}Connexion - espace client{% endblock %}

{% block body %}



    <div class="content">
        <div class="container">
            <div class="row">
                <div class="col-md-6 col-lg-6 mx-auto">
                    <div class="login-wrap">
                        {% if error %}
                            <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                        {% endif %}

                        {% for label, messages in app.flashes %}
                            <div class="alert alert-{{ label }} alert-dismissible fade show" role="alert">
                                {% for message in messages %}
                                    {{ message }}
                                {% endfor %}
                                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                            </div>
                        {% endfor %}

                        <!-- Login Form -->
                        <form method="post">
                            <div class="log-form">
                                <div class="form-group">
                                    <label class="col-form-label">Mail</label>
                                    <input type="text" value="{{ last_username }}" name="email" class="form-control" autocomplete="email" required autofocus placeholder="johndoe@example.com">
                                </div>
                                <div class="form-group">
                                    <div class="row">
                                        <div class="col">
                                            <label class="col-form-label">Mot de passe</label>
                                        </div>
                                        <div class="col-auto">
                                            <a class="forgot-link" href="password-recovery.html">
                                               Mot de passe oubli√© ?
                                            </a>
                                        </div>
                                    </div>
                                    <div class="pass-group">
                                        <input type="password" class="form-control pass-input" autocomplete="current-password" required name="password" placeholder="*************">
                                        <span class="toggle-password feather-eye-off"></span>
                                    </div>
                                </div>
                                <input type="hidden" name="_csrf_token"
                                       value="{{ csrf_token('authenticate') }}"
                                >
                                <div class="row">
                                    <div class="col-6">
                                        <label class="custom_check">
                                            <input type="checkbox"  name="_remember_me"  class="rememberme">
                                            <span class="checkmark"></span>Se sevounir de moi
                                        </label>
                                    </div>
                                </div>
                            </div>
                            <button class="btn btn-primary w-100 login-btn" type="submit">Connexion</button>
                            <div class="login-or">
                                <span class="or-line"></span>
                                <span class="span-or">OU</span>
                            </div>
                            <div class="social-login">
                                <a href="{{ path('tenant_register') }}" class="btn btn-google w-100">Trouver un parking</a>
                                <a href="{{ path('owner_register') }}" class="btn btn-google w-100">Louer votre parking</a>
                            </div>
                        </form>
                        <!-- /Login Form -->

                    </div>
                </div>
            </div>

        </div>
    </div>

{% endblock %}
